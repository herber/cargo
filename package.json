{
  "name": "cargo",
  "productName": "Cargo",
  "version": "0.0.1",
  "description": "A browser with a really thin ui",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "main",
    "renderer",
    "packages/*"
  ],
  "repository": "herber/cargo",
  "main": "./main-out/index.js",
  "author": {
    "name": "Tobias Herber",
    "email": "tobihrbr@gmail.com",
    "url": "http://tobihrbr.com"
  },
  "scripts": {
    "start": "npm run build:electron && electron .",
    "build:renderer": "next build renderer && next export renderer",
    "build:electron": "tsc -p main",
    "build": "yarn build:renderer && yarn build:electron",
    "dist": "npm run build && electron-builder --dir",
    "type-check": "tsc"
  },
  "keywords": [
    "electron-app",
    "electron",
    "browser",
    "cargo"
  ],
  "devDependencies": {
    "@types/next": "8.0.6",
    "@types/node": "^11.13.9",
    "@types/react": "^16.8.15",
    "@types/react-dom": "^16.0.11",
    "electron": "^7.0.0-beta.5",
    "electron-builder": "^21.2.0",
    "lerna": "^3.15.0",
    "next": "latest",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "@emotion/core": "^10.0.17",
    "@emotion/styled": "^10.0.17",
    "electron-is-dev": "^1.0.1",
    "electron-next": "^3.1.5",
    "emotion": "^10.0.17",
    "mousetrap": "^1.6.1",
    "normalize-url": "^2.0.1",
    "nprogress": "^0.2.0",
    "react": "^16.7.0",
    "react-dom": "^16.7.0",
    "tldjs": "^2.2.0",
    "vkey": "^1.0.1"
  },
  "build": {
    "appId": "space.herber.cargo",
    "productName": "Cargo",
    "asar": true,
    "npmRebuild": false,
    "directories": {
      "output": "./dist"
    },
    "extraResources": [
      {
        "from": "renderer/out",
        "to": "app/renderer"
      }
    ],
    "files": [
      "**/*",
      "src",
      "!keys",
      "!test",
      "!*.pug",
      "!src/node_modules/test",
      "!release",
      "!.DS_Store",
      "!webpack.config.js",
      "!cmake-js",
      "!pkg",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme,test,__tests__,tests,powered-test,example,examples,*.d.ts}",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc}",
      "!**/node_modules/.bin",
      "!**/{.DS_Store,.git,.gitignore}"
    ],
    "win": {
      "icon": "./src/static/icon.ico"
    },
    "mac": {
      "icon": "./src/static/icon.icns"
    }
  }
}
